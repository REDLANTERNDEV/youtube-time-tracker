{
  "manifest_version": 3,
  "name": "YouTube Watch Time Tracker",
  "version": "1.0",
  "description": "Track your YouTube watch time day by day.",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Watch Time Tracker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
